<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="600"
        Width="1024" Height="600"
        x:Class="OpenWriter.MainWindow"
        Title="OpenWriter">
    
        <Grid Background="{DynamicResource PrimaryBackground}" ColumnDefinitions="200, *">
            <Border Padding="20" Background="{DynamicResource PrimaryBackgroundGradient}">
                <Grid RowDefinitions="*, Auto">
                    <StackPanel Spacing="10">
                        <Image Source="/Assets/Images/IE_Logo_20250604.png" Width="175"/>
                        
                        <Button Background="{DynamicResource PrimaryBackgroundGradient}" HorizontalAlignment="Stretch">
                            <Label Content="New File"></Label>
                        </Button>
                        <Button  Background="{DynamicResource PrimaryBackgroundGradient}" HorizontalAlignment="Stretch">
                            <Label Content="Open"></Label>
                        </Button>
                        <Button  Background="{DynamicResource PrimaryBackgroundGradient}" HorizontalAlignment="Stretch">
                            <Label Content="Import"></Label>
                        </Button>
                        <Button  Background="{DynamicResource PrimaryBackgroundGradient}" HorizontalAlignment="Stretch">
                            <Label Content="Settings"></Label>
                        </Button>
                        <Button  Background="{DynamicResource PrimaryBackgroundGradient}" HorizontalAlignment="Stretch">
                            <Label Content="Exit"></Label>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
</Window>
